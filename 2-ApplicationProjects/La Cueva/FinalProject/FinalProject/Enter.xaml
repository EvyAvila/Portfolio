<Page x:Class="FinalProject.Enter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Enter">

    <Grid x:Name="EnterGrid" Background="#FF383529">
        <Image x:Name="CaveImage" HorizontalAlignment="Left" Height="430" Margin="10,0,0,0" VerticalAlignment="Top" Width="771"  Stretch="Fill" Source="media/UpdatedCave.png"/>
        <TextBlock x:Name="Title" Margin="189,24,176,383" TextWrapping="Wrap" Text="Welcome to the Cueva..." FontSize="22" FontFamily="Wide Latin" Foreground="#FF9B2E2E"/>
        <Button x:Name="EnterButton" Content="ENTER IF YOU DARE..." HorizontalAlignment="Left" Margin="323,183,0,0" VerticalAlignment="Top" Width="188" Click="EnterButton_Click" Background="#FF89221E" Foreground="Black" BorderBrush="#FF5E0808" FontFamily="Chiller" FontSize="24" FontWeight="Bold"/>
    </Grid>
</Page>
