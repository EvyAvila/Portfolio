<Page x:Class="FinalProject.DisplayResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayResult">

    <Grid x:Name="MainGrid" Loaded="MainGrid_Loaded">
        <Image HorizontalAlignment="Left" Height="440" Margin="10,10,0,0" VerticalAlignment="Top" Width="780" Source="media/paper.png" Stretch="Fill" />
        <TextBlock x:Name="DisplayingMessage" HorizontalAlignment="Left" Margin="92,35,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="339" Width="682" FontSize="20"/>
        <Button x:Name="ExitButton" Content="Back" HorizontalAlignment="Left" Margin="365,393,0,0" VerticalAlignment="Top" Width="75" Background="#FFF03838" BorderBrush="#FFF1D8D8" Foreground="#FFFFFEFE" Click="ExitButton_Click"/>
        
    </Grid>
</Page>
